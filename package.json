{
  "name": "@svar-ui/react-gantt",
  "version": "2.3.3",
  "description": "A customizable, high-performance React Gantt chart component for building project timelines.",
  "productTag": "gantt",
  "type": "module",
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "react-gantt",
    "gantt-react",
    "gantt",
    "gantt-chart",
    "react-gantt-chart",
    "gantt-chart-component",
    "gantt-diagram",
    "react-gantt-component",
    "svar widgets",
    "svar-react",
    "timeline",
    "typescript"
  ],
  "license": "GPL-3.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "BUILD_DEMOS=true vite build",
    "build:full-css": "BUILD_FULL_CSS=true vite build",
    "build:pages": "BUILD_DEMOS=true vite build",
    "type-check": "tsgo --noEmit",
    "lint": "oxlint .",
    "preview": "vite preview",
    "prepare": "husky",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:kitchensink": "vitest --ui KitchenSink.test.jsx",
    "demo:kitchensink": "./demo-kitchensink.sh",
    "test:coverage": "vitest run --coverage"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.es.js"
    },
    "./style.css": "./dist/index.css",
    "./all.css": "./dist-full/index.css"
  },
  "types": "./types/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "sideEffects": false,
  "files": [
    "dist",
    "types",
    "package.json",
    "dist-full/index.css"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@svar-ui/gantt-data-provider": "2.3.0",
    "@svar-ui/gantt-locales": "2.3.0",
    "@svar-ui/gantt-store": "2.3.0",
    "@svar-ui/lib-dom": "0.9.2",
    "@svar-ui/lib-react": "1.1.1",
    "@svar-ui/lib-state": "1.9.6",
    "@svar-ui/react-core": "2.3.1",
    "@svar-ui/react-editor": "2.3.2",
    "@svar-ui/react-grid": "2.3.1",
    "@svar-ui/react-menu": "2.3.1",
    "@svar-ui/react-toolbar": "2.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "uuid": "^13.0.0"
  },
  "homepage": "https://svar.dev/react/gantt/",
  "repository": {
    "type": "git",
    "url": "https://github.com/svar-widgets/react-gantt.git"
  },
  "bugs": {
    "url": "https://forum.svar.dev"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@typescript/native-preview": "^7.0.0-dev.20260212.1",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.6.0",
    "husky": "9.1.6",
    "jsdom": "^28.0.0",
    "lint-staged": "15.2.10",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router": "7.8.2",
    "react-router-dom": "7.8.2",
    "vite": "^8.0.0-beta.14",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,js,svelte}": [
      "oxlint --fix",
      "oxfmt --write"
    ],
    "*.{css,md,json}": [
      "oxfmt --write"
    ]
  }
}
